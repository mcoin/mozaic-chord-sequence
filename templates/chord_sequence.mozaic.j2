{# OnNewBar - song selection logic #}
@OnNewBar
  bar = HostBar % NbOfBars
  LabelKnob 0, {Bar }, bar + 1
  SetKnobValue 0, 127*bar/(NbOfBars - 1)
  Call @ClearPads
{% for song in songs %}
  {{ 'if' if loop.first else 'elseif' }} SongNb = {{ loop.index0 }}
    Call @UpdateChordsSong{{ loop.index0 }}
{% endfor %}
  endif

  Call @Bar2PadColor
@End

@OnNewBeat
  ColorPad prevPad, 0
  bar = HostBar % NbOfBars
  beat = HostBeat

  pad = beat*2
  if beat = 0
    ColorPad pad, 1
    FlashPad pad
  else
    ColorPad pad, 3
  endif

  prevPad = pad
@End
